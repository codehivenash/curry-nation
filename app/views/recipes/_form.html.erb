<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div data-alert class="alert-box alert">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :cooking_time %><br>
    <%= f.text_field :cooking_time %>
  </div>
  <div class="field">
    <%= f.label :difficulty_level %><br>
    <%= f.select(:difficulty_level, Recipe::DIFFICULTY, {:promt => 'Difficulty of the Recipe'}, :class => 'form-control') %>
  </div>
  <div class="field">
    <%= f.label :food_type_id %><br>
    <%= f.select(:food_type_id, options_from_collection_for_select(FoodType.all, :id, :name),  {:prompt => 'Please select the Food Type'}, :class=> 'form_control') %>
  </div>
  <div class="field">
    <%= f.label :food_preference_id %><br>
    <%= f.select(:food_preference_id, options_from_collection_for_select(FoodPreference.all, :id, :name),{prompt: 'Please Select Your Food Preference'}, class: 'form_control') %>
  </div>
  <div class="field">
    <%= f.label :cuisine_id %><br>
    <%= f.select(:cuisine_id, options_from_collection_for_select(Cuisine.all , :id, :name), {prompt: 'Please Select Your Cuisine'}) %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :procedure %><br>
    <%= f.text_area :procedure %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
