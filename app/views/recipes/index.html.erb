<!--render the sidebar with the fodd_prefs, food_types, cuisines-->
<%= render 'recipes/helpers/columns' %>

<div class="large-10 columns">
<h3>Listing Recipes</h3>

<table class="data">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cooking time</th>
      <th>Difficulty level</th>
      <th>Food type</th>
      <th>Food preference</th>
      <th>Cuisine</th>
      <th>Ingredients</th>
      <th>Procedure</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.difficulty_level %></td>
        <td><%= recipe.food_type.name %></td>
        <td><%= recipe.food_preference.name %></td>
        <td><%= recipe.cuisine.name %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.procedure.truncate(14) %></td>
        <td>   
          <%= link_to 'Show', recipe , class: 'button tiny' %>
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_recipe_path(recipe), class: 'button tiny' %>
            <%= link_to 'Destroy', recipe , method: :delete, data: { confirm: 'Are you sure?' } , class: 'button tiny alert' %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Recipe', new_recipe_path , class: 'button tiny' %>
<% end %>
</div>
